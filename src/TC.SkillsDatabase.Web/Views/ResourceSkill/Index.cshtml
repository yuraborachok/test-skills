@model IEnumerable<TC.SkillsDatabase.Core.Models.DbModels.ResourceSkill>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Resource.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Skill.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SkillLevel.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SkillLevelValue)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Resource.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Skill.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SkillLevel.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SkillLevelValue)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
